<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="SUPPORETD_CURRENCY" author="">
        <createTable tableName="SUPPORTED_PAYMENT_METHOD">
            <column name="id" type="UUID">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="merchant_id" type="UUID"/>
            <column name="PAYMENT_METHOD" type="VARCHAR"/>
            <column name="active" type="boolean"/>
            <column name="created_by" type="VARCHAR"/>
            <column name="updated_by" type="VARCHAR"/>
            <column name="created_on" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_on" type="TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="SUPPORTED_PAYMENT_METHOD"
            baseColumnNames="merchant_id"
            constraintName="MERCHANT_ID_PAYMENT_METHOD_FK"
            referencedTableName="MERCHANT_DETAILS"
            referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>